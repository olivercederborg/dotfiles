{
    // APC Styling
    "apc.electron": {
        "frame": false,
        "titleBarStyle": "customButtonsOnHover",
        "trafficLightPosition": {
            "x": 10,
            "y": 12
        },
        "customButtonsOnHover": true,
    },
    "apc.header": {
        "height": 40
    },
    "apc.listRow": {
        "fontSize": 13.7,
        "height": 26
    },
    "apc.sidebar.titlebar": {
        "height": 40
    },
    "apc.activityBar": {
        "size": 46,
        "itemSize": 40,
        "itemMargin": 6
    },
    "apc.font.family": "Geist Mono",
    "apc.stylesheet": {
        "*": "font-Family: Geist Mono",
        ".editor .title": "background: transparent !important",
        // Command palette
        ".quick-input-widget": {
            "position": "fixed !important;",
            "top": "50% !important;",
            "left": "50% !important;",
            "transform": "translate(-50%, -50%) !important;",
            "max-width": "800px !important;",
            "width": "60vw !important;",
            "margin": "0 !important;",
            "border": "1px solid #3e465b !important",
        },
        ".quick-input-widget .quick-input-header": "padding:0px!important;margin-bottom:10px!important;",
        ".quick-input-widget .monaco-inputbox": "background: #2e3646!important;",
        ".quick-input-widget .monaco-list-row:hover": "background: #424e65a0 !important;",
        // Sidebar
        ".sidebar .title-label": "display: none !important",
        ".sidebar .composite.title": "display: block !important",
        ".nosidebar .inline-tabs-placeholder": "width: 75px",
        ".split-view-view:first-child .pane-header": "display: none !important;",
        ".monaco-workbench .part.sidebar .title-actions .actions-container": "justify-content: space-evenly !important",
    },
    "vscode-neovim.afterInitConfig": [
        "set cmdheight=10",
        "set laststatus=2"
    ],
    "editor.bracketPairColorization.enabled": false,
    "editor.accessibilitySupport": "off",
    "editor.linkedEditing": true,
    "editor.inlineSuggest.enabled": true,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "editor.fontFamily": "Geist Mono",
    "editor.experimentalInlineEdit.fontFamily": "Geist Mono",
    "editor.codeLensFontFamily": "Geist Mono",
    "chat.editor.fontFamily": "Geist Mono",
    "editor.inlayHints.fontFamily": "Geist Mono",
    "terminal.integrated.fontFamily": "Geist Mono",
    "editor.lineNumbers": "relative",
    "editor.fontSize": 14,
    "editor.lineHeight": 40,
    "terminal.integrated.fontSize": 15,
    "editor.fontLigatures": true,
    "editor.cursorBlinking": "solid",
    "breadcrumbs.enabled": false,
    "workbench.tree.indent": 20,
    "editor.minimap.enabled": false,
    "editor.glyphMargin": false,
    "editor.cursorSurroundingLines": 7,
    "editor.cursorSmoothCaretAnimation": "off",
    "window.title": "${dirty}${activeEditorShort}",
    "workbench.editor.centeredLayoutAutoResize": false,
    "workbench.editor.showTabs": "single",
    "window.commandCenter": false,
    "window.titleBarStyle": "custom",
    "editor.minimap.renderCharacters": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.minimap.autohide": true,
    "editor.stickyScroll.enabled": true,
    "editor.wordWrap": "on",
    "editor.wrappingStrategy": "advanced",
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "editor.colorDecorators": true,
    "git.openRepositoryInParentFolders": "always",
    "git.autofetch": true,
    "git.confirmNoVerifyCommit": false,
    "git.confirmSync": false,
    "git.ignoreMissingGitWarning": true,
    "gitlens.gitCommands.skipConfirmations": [
        "fetch:command",
        "stash-push:command",
        "switch:command",
        "push:command"
    ],
    "gitlens.hovers.currentLine.over": "line",
    "typescript.preferences.importModuleSpecifier": "non-relative",
    "tailwindCSS.experimental.classRegex": [
        [
            "cva\\(([^)]*)\\)",
            "[\"'`]([^\"'`]*).*?[\"'`]"
        ],
        [
            "cn\\(([^)]*)\\)",
            "[\"'`]([^\"'`]*).*?[\"'`]"
        ],
        [
            "cx\\(([^)]*)\\)",
            "[\"'`]([^\"'`]*).*?[\"'`]"
        ]
    ],
    "terminal.integrated.env.osx": {
        "FIG_NEW_SESSION": "1",
        "CW_NEW_SESSION": "1",
        "Q_NEW_SESSION": "1"
    },
    "totalTypeScript.hideAllTips": true,
    "totalTypeScript.hideBasicTips": true,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "workbench.productIconTheme": "fluent-icons",
    "vscode-neovim.ctrlKeysForNormalMode": [
        "a",
        "b",
        "d",
        "e",
        "f",
        "h",
        "i",
        "j",
        "k",
        "l",
        "m",
        "o",
        "r",
        "t",
        "u",
        "v",
        "w",
        "x",
        "y",
        "z",
        "/",
        "]"
    ],
    "vscode-neovim.ctrlKeysForInsertMode": [
        "a",
        "d",
        "h",
        "j",
        "m",
        "o",
        "r",
        "t",
        "u",
        "w"
    ],
    "githubPullRequests.pullBranch": "never",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "gitlens.views.remotes.branches.layout": "list",
    "security.workspace.trust.untrustedFiles": "open",
    "typescript.tsdk": "./node_modules/typescript/lib",
    "editor.wordWrapColumn": 150,
    "prettier.requireConfig": true,
    "prettier.semi": false,
    "workbench.sideBar.location": "right",
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,
    "[prisma]": {
        "editor.defaultFormatter": "Prisma.prisma"
    },
    "explorer.confirmDragAndDrop": false,
    "git.ignoreRebaseWarning": true,
    "githubPullRequests.createOnPublishBranch": "never",
    "update.mode": "manual",
    "cursor.cmdk.useThemedDiffBackground": true,
    "cursor.diffs.useCharacterLevelDiffs": true,
    // Disable the default formatter, use eslint instead
    "prettier.enable": false,
    "editor.formatOnSave": false,
    // Auto fix
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.organizeImports": "never"
    },
    // Silent the stylistic rules in you IDE, but still auto fix them
    "eslint.rules.customizations": [
        {
            "rule": "style/*",
            "severity": "off",
            "fixable": true
        },
        {
            "rule": "format/*",
            "severity": "off",
            "fixable": true
        },
        {
            "rule": "*-indent",
            "severity": "off",
            "fixable": true
        },
        {
            "rule": "*-spacing",
            "severity": "off",
            "fixable": true
        },
        {
            "rule": "*-spaces",
            "severity": "off",
            "fixable": true
        },
        {
            "rule": "*-order",
            "severity": "off",
            "fixable": true
        },
        {
            "rule": "*-dangle",
            "severity": "off",
            "fixable": true
        },
        {
            "rule": "*-newline",
            "severity": "off",
            "fixable": true
        },
        {
            "rule": "*quotes",
            "severity": "off",
            "fixable": true
        },
        {
            "rule": "*semi",
            "severity": "off",
            "fixable": true
        }
    ],
    // Enable eslint for all supported languages
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "vue",
        "html",
        "markdown",
        "json",
        "jsonc",
        "yaml",
        "toml",
        "xml",
        "gql",
        "graphql",
        "astro",
        "svelte",
        "css",
        "less",
        "scss",
        "pcss",
        "postcss"
    ],
    "eslint.useFlatConfig": true,
    "workbench.editor.customLabels.patterns": {
        "**/app/**/*slug*/page.jsx": "üêå ${dirname(1)}.${extname}",
        "**/app/**/*slug*/page.tsx": "üêå ${dirname(1)}.${extname}",
        "**/app/**/layout.jsx": "üñºÔ∏è ${dirname}.${extname}",
        "**/app/**/layout.tsx": "üñºÔ∏è ${dirname}.${extname}",
        "**/app/**/page.jsx": "üìÑ ${dirname}.${extname}",
        "**/app/**/page.tsx": "üìÑ ${dirname}.${extname}"
    },
    "cursor.cpp.enablePartialAccepts": true,
    "gitlens.hovers.avatars": false,
    "gitlens.hovers.enabled": false,
    "vscode-neovim.NVIM_APPNAME": "nvim",
    "workbench.statusBar.visible": false,
    "workbench.activityBar.location": "hidden",
    "workbench.layoutControl.enabled": false,
    "workbench.editor.enablePreview": false,
    "editor.suggest.insertMode": "replace",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "editor.inlayHints.fontSize": 15,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "vscode-neovim.logOutputToConsole": true,
    "cursor.composer.renderPillsInsteadOfBlocks": true,
    "cursor.composer.collapsePaneInputBoxPills": true,
}
